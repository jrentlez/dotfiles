#!/usr/bin/env sh

first=true

section() {
	if [ $first = true ]; then
		first=false
		printf "\e[2m---* %s *---\e[0m\n" "$1"
	else
		printf "\n\e[2m---* %s *---\e[0m\n" "$1"
	fi
}

section "System packages"
sudo pacman -Syu --noconfirm

section "AUR packages"
rua upgrade

section Flatpak
flatpak update -y
flatpak remove --unused -y
flatpak remove --delete-data -y

section Rust
rustup update

section Dotfiles
git -C "$HOME/dotfiles" pull

# HACK: For now, vim.pack.update() is async but cannot be waited for.
# As a workaround, open the neovim ui and manually confirm the update
section "Neovim plugins"
nvim "+lua vim.schedule(function() vim.pack.update(vim.tbl_map(function(p) return p.spec.name end, vim.pack.get())) end)"
